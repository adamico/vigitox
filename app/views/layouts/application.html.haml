!!! 5
%html
  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    = javascript_include_tag 'application'
    = raw wymeditor_initialize
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    = yield(:head)
  %body
    %section#page
      %header#header
        %section#corner
          &nbsp;
        %section#banner
          %h1#site_header= link_to_unless_current "VIGItox", root_path
          %section#user_nav
            - if user_signed_in?
              Bonjour, 
              %strong= current_user.email
              = link_to "Déconnexion", destroy_user_session_path
            - else
              = link_to "Connexion", new_user_session_path
          %section#search
            = form_tag search_path, :method => :get do
              = text_field_tag :search, {}, {:type => "search",
                               :placeholder => "Rechercher le site par...",
                               :value => (params[:search] if params[:search])}
              = submit_tag "Recherche", :name => nil
      %section#middle
        %aside#sidebar
          %ul#links
            %li= link_to "Archives", archive_path
            %li.plus= link_to "Revue", new_revue_path if user_signed_in?
            %li= link_to "Auteurs", authors_path
            %li.plus= link_to "Auteur", new_author_path if user_signed_in?
            %li= link_to "Catégories", categories_path
            %li.plus= link_to "Catégorie", new_categorie_path if user_signed_in?
            %li= link_to "Arguments", arguments_path
            %li.plus= link_to "Argument", new_argument_path if user_signed_in?

        %section#main
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"

          - if show_title?
            %h1= yield(:title)
          = yield
        .clear
        %footer#footer
          - if Rails.env.development?
            %p This is the footer!
