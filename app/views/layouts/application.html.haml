%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title
      = h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application', 'formtastic', 'formtastic_changes', :cache => 'base'
    = javascript_include_tag :defaults
    = yield(:head)
  %body
    #header
      #corner
        &nbsp;
      #banner
        %h1= link_to "Index VIGItox", root_path
        #user_nav
          - if user_signed_in?
            = "Bonjour, #{current_user.email}."
            = link_to "DÃ©connection", destroy_user_session_path
          - else
            = link_to "Connection", new_user_session_path
    #main
      #menu
        %ul
          %li= link_to "Recherche", search_path
          %li= link_to "Autheurs", authors_path
          %li= link_to "Categories", categories_path
          %li= link_to "Arguments", arguments_path
      #container
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1
            = h yield(:title)
        = yield
