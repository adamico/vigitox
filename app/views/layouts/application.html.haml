!!! 5
%html
  %head
    %title= yield(:title) || "Untitled"
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    :plain
      <!-- if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag 'application', media: "all"
    = javascript_include_tag 'application'
    = csrf_meta_tag
    = favicon_link_tag
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = yield(:head)

  %body{class: params[:controller]}

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{class: "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "VIGItox", root_path, class: "brand"
          .nav-collapse
            %ul.nav
              %li= link_to "Archives", archive_path
              %li.dropdown
                = link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do
                  Filtres
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Catégories", categories_path
                  %li= link_to "Arguments", arguments_path
                  %li= link_to "Auteurs", authors_path
            = render 'layouts/user_nav'
            = render 'layouts/search'
    .container
      %header#page_header
        = yield(:page_header)
        %h1
          = yield(:title) if show_title?
          %small= yield(:subtitle)
        - flash && flash.each do |key, value|
          .alert.fade.in{:class => "alert-#{key}"}
            %a.close{"data-dismiss" => "alert"} &times;
            = value
        = yield(:subnav)

      %section#main
        = yield

    %footer#footer
      %ul.credits
        %li
          = link_to "mailto:centre.antipoison@chu-lyon.fr" do
            %i.icon-envelope
            Nous contacter
        %li
          = link_to disclaimer_path do
            %i.icon-exclamation-sign
            Mentions légales

      = yield :footer
