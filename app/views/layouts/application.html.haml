!!! 5
%html
  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}/
    - if Rails.env.production? 
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js', 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/jquery-ui.min.js', 'rails', 'application'
    - else
      = javascript_include_tag :defaults
    = javascript_include_tag 'nested_form'

    = stylesheet_link_tag 'application', 'jquery-ui'
    = csrf_meta_tag
    = yield(:head)
  %body
    #header
      #corner
        &nbsp;
      #banner
        %h1= link_to_unless_current "VIGItox", root_path
        #user_nav
          - if user_signed_in?
            = "Bonjour, #{current_user.email}."
            = link_to "DÃ©connection", destroy_user_session_path
          - else
            = link_to "Connection", new_user_session_path
    #main
      #menu
        %ul
          %li= link_to "Recherche", search_path
          %li
            %ul.links
              %li= link_to "Archives", archive_path
              %li= link_to "+", new_revue_path if user_signed_in?
          %li
            %ul.links
              %li= link_to "Autheurs", authors_path
              %li= link_to "+", new_author_path if user_signed_in?
          %li
            %ul.links
              %li= link_to "Categories", categories_path
              %li= link_to "+", new_categorie_path if user_signed_in?
          %li
            %ul.links
              %li= link_to "Arguments", arguments_path
              %li= link_to "+", new_argument_path if user_signed_in?
      #container
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1= yield(:title)
        = yield
