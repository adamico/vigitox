= form_tag search_path, :method => :get, class: "navbar-search pull-right" do
  = text_field_tag :search, {}, {:type => "search",
                   :placeholder => "Recherche", class: "span2 search-query",
                   :value => (params[:search] if params[:search])}
  = submit_tag "OK", class: "btn btn-primary", style: "position: absolute; left: -9999px; width: 1px; height: 1px;"
