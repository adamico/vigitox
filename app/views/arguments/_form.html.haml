= form_for argument, html: {class: "form-inline", role: "form"} do |f|
  = render 'application/error_message', model: argument

  .form-group
    = f.label :name, class: "sr-only"
    = f.text_field :name, placeholder: "Libellé", class: "form-control"

  .form-group
    = f.label :nature, class: "sr-only"
    = f.collection_select :nature, Argument::NATURES, :to_s, :to_s, {prompt: "Nature"}, class: "form-control"

  .btn-group
    = f.submit "Enregistrer", class: "btn btn-success"
    - if params[:id]
      = link_to "Annuler les modifications", argument, class: "btn btn-danger"
    - else
      = link_to "Retour à la liste", arguments_path, class: "btn btn-danger"
