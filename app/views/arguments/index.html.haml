- title "Arguments"

= content_for :subtitle do
  = link_to 'Index PDF', arguments_path(:format => "pdf")

- if @arguments.any?
  %table.table.table-condensed.table-striped
    %thead
      %tr
        %th Name
        %th Nature
        %th Articles
        %th &nbsp;
    %tbody
      - @arguments.each do |argument|
        %tr
          %td= link_to h(argument.name), argument
          %td= h argument.nature
          %td= argument.articles_as_main.count + argument.articles_as_aux.count
          - if user_signed_in?
            %td
              %ul.actions
                %li= link_to 'Modifier', edit_argument_path(argument)
                %li= link_to 'DÃ©truire', argument, :confirm => 'Etes-vous sur ?', :method => :delete

  = paginate @arguments, theme: "twitter-bootstrap"

- else
  Aucun argument.
