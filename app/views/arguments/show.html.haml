- title h(@argument.name.humanize)

%ul.actions
  %li= link_to "Edit", edit_argument_path(@argument)
  %li= link_to "Destroy", @argument, :confirm => 'Are you sure?', :method => :delete

.clear

%p
  %strong Nature:
  =h @argument.nature

  - if !@argument.articles_as_main.blank?
    %h3 Articles avec cet argument comme principal
    %ul.articles
      - for article in @argument.articles_as_main
        %li
          = link_to "#{article.titre} (VIGITOX##{article.revue.numero})", revue_path(article.revue)
  - else
    %h3 Pas d'articles avec cet argument comme principal

  - if !@argument.articles_as_aux.blank?
    %h4 Articles avec cet argument comme secondaire
    %ul.articles
      - for article in @argument.articles_as_aux
        %li
          = link_to "#{article.titre} (VIGITOX##{article.revue.numero})", revue_path(article.revue)
  - else
    %h4 Pas d'articles avec cet argument comme secondaire
