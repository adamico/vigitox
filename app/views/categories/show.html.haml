- title h(@categorie.name)

- if user_signed_in?
  %ul.actions
    %li= link_to "Edit", edit_categorie_path(@categorie)
    %li= link_to "Destroy", @categorie, :confirm => 'Are you sure?', :method => :delete

.clear

- if !@articles.blank?

  %p= link_to "Index articles au format PDF", categorie_path(@categorie, :format => 'pdf')

  %h3 Articles appartenant Ã  cette categorie :
  = render 'shared/article_line', :articles => @articles

- else
  %h3 Pas d'articles

%p= page_entries_info @articles
%p= will_paginate @articles, :previous_label => "<--", :next_label => "-->"
