- title "Catégories"

= content_for :subtitle do
  = link_to 'Index PDF', categories_path(:format => "pdf") if Rails.env.development?

%table.table.table-condensed.table-striped
  %thead
    %tr
      %th Nom
      %th N. Articles
      %th &nbsp;
  %tbody
    - @categories.each do |categorie|
      %tr
        %td= link_to categorie.name, categorie
        %td= categorie.articles.count
        - if user_signed_in?
          %td
            %ul.actions
              %li= link_to 'Modifier', edit_categorie_path(categorie)
              %li= link_to 'Détruire', categorie, :confirm => 'Sûr?', :method => :delete

- if user_signed_in?
  = link_to new_categorie_path, class: "btn btn-success" do
    %i.icon-white.icon-plus
    Nouvelle Categorie
