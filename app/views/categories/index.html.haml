- title "Categories"

.clear

%table
  %tr
    %th Nom
  - for categorie in @categories
    %tr
      %td
        = link_to categorie.name, categorie
        = "#{categorie.articles.count} articles"
      - if user_signed_in?
        %td= link_to 'Edit', edit_categorie_path(categorie)
        %td= link_to 'Destroy', categorie, :confirm => 'Are you sure?', :method => :delete

- if user_signed_in?
  %p= link_to "Nouvelle Categorie", new_categorie_path
