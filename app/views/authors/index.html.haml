- title "Auteurs"

%table.table.table-condensed.table-striped
  %thead
    %tr
      %th Nom
      %th Articles
      %th &nbsp;
  %tbody
    - for author in @authors
      %tr
        %td= link_to author.nom_and_prenom, author
        %td= author.authorships.size
        - if user_signed_in?
          %td
            .btn-group
              = link_to 'Modifier', edit_author_path(author), class: "btn btn-sm btn-warning"
              = link_to 'DÃ©truire', author, data: {confirm: 'Etes-vous sur ?'}, method: :delete, class: "btn btn-sm btn-danger"

= paginate @authors, theme: "twitter-bootstrap"

- if user_signed_in?
  .pull-right
    = link_to new_author_path, class: "btn btn-success" do
      %span.glyphicon.glyphicon-plus
      Nouvel Auteur
