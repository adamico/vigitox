- title "Autheurs"

.clear

%table
  %tr
    %th Nom
    %th N. Articles
  - for author in @authors
    %tr
      %td= link_to author.name, author
      %td= author.authorships.size
      - if user_signed_in?
        %td= link_to 'Edit', edit_author_path(author)
        %td= link_to 'Destroy', author, :confirm => 'Are you sure?', :method => :delete

- if user_signed_in?
  %p= link_to "New Author", new_author_path
