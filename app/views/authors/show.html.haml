- title h(@author.short_name)

- if user_signed_in?
  %ul.actions
    %li= link_to "Edit", edit_author_path(@author)
    %li= link_to "Destroy", @author, :confirm => 'Are you sure?', :method => :delete

.clear

%div
  %span.label Nom :
  = h @author.nom

