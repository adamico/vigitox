#revue
  %h3= link_to "VIGItox##{revue.numero}", revue
  - link_to(revue.pdf_url) do
    = image_tag("pdficon_small.gif", :alt => "Version PDF", :title => "Version PDF", :class => "pdf_link")
  - if user_signed_in?
    %ul.actions
      %li= link_to "Modifier", edit_revue_path(revue)
      %li= link_to "DÃ©truire", revue,
        :confirm => 'Are you sure?', :method => :delete
  .clear
  %ul.articles
    - revue.articles.each do |article|
      - content_tag_for :li, article do
        %strong
          = link_to article.full_title,
            revue_articles_path(article.revue, :page => article.position)
