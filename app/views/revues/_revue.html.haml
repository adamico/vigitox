.panel.panel-default
  .panel-heading
    %h3= link_to_with_title "VIGItox##{revue.numero} (#{l(revue.date_sortie, format: :month_year)})", revue
  .panel-body
    - if revue.articles.any?
      - revue.articles.each do |article|
        = content_tag_for :div, article do
          = link_to article do
            %h4
              %span.glyphicon.glyphicon-book
              = article.full_title
