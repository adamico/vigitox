- title "Tags"

%table
  %tr
    %th Name
  - for tag in @tags
    %tr
      %td
        = link_to tag.name, tag
        = "#{tag.articles.count} articles"
      %td= link_to 'Edit', edit_tag_path(tag)
      %td= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Tag", new_tag_path
