#article
  %h3= article.full_title
  - if user_signed_in?
    %ul.actions
      %li= link_to "Modifier", [:edit, article]
      %li= link_to "Detruire", article, :method => :delete, :confirm => "Are you sure?"
  .clear
  - links_to_associations(article, "authors")

  - if article.argumentaire
    %p
      %strong Arguments :
      - unless article.main_argument.nil?
        = link_to article.main_argument.name, argument_path(article.main_argument)
      - unless article.aux_argument.nil?
        = "/"
        = link_to article.aux_argument.name, argument_path(article.aux_argument)

  - links_to_associations(article, "categories")

  %p= article.contenu if article.contenu
